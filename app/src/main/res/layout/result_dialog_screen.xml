<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_back"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:id="@+id/dialog_logo"
        tools:src="@drawable/success_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="340dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Internet ulanmagan nima qilish kerak desam ishonasizlae enjdnjdbjdnjdnbjdbv"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display"
        android:textSize="18sp"
        android:id="@+id/dialog_text"
        />



    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_text"
        app:layout_constraintLeft_toLeftOf="@id/dialog_text"
        app:layout_constraintRight_toRightOf="@id/dialog_text"
        />


</androidx.constraintlayout.widget.ConstraintLayout>